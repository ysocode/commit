#!/usr/bin/env php
<?php

if (file_exists(dirname(__DIR__, 2).'/autoload.php')) {
    require_once dirname(__DIR__, 2).'/autoload.php';
} else {
    require_once dirname(__DIR__).'/vendor/autoload.php';
}

use Symfony\Component\Console\Application;
use YSOCode\Commit\Commands\Generate;
use YSOCode\Commit\Commands\Cohere\Key as CohereKey;
use YSOCode\Commit\Commands\OpenAI\Key as OpenAIKey;

$application = new Application();

/**
 * Main
 */
$generateCommand = new Generate();
$application->add($generateCommand);

$application->setDefaultCommand($generateCommand->getName());

/**
 * Cohere
 */
$application->add(new CohereKey());

/**
 * OpenAI
 */
$application->add(new OpenAIKey());

$application->run();

